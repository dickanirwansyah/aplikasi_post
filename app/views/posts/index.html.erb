<div class="container">
  <div class="container-fluid">
    <div class="col-lg-10 col-lg-offset-1">
      <div class="page-header">
        <h3><%=@title%></h3>
      </div>
      <a class="btn btn-primary" href="/posts/new">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Add Post
      </a>
      <div class="page-header">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <td>Title</td>
              <td>Body</td>
              <td>Read</td>
            </tr>
          </thead>
          <% @posts.each do |list| %>
          <tbody>
              <td><%= list.title %></td>
              <td><%= list.body %></td>
              <td>
                <%= link_to "Read More", post_path(list),
                :class => 'btn btn-default'%>
              </td>
          </tbody>
          <%end%>
          <tfoot>
            <td>Title</td>
            <td>Body</td>
            <td>Read</td>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
